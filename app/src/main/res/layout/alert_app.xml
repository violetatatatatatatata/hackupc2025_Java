<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:padding="24dp">

    <!-- Icono de advertencia centrado -->
    <ImageView
        android:id="@+id/ivWarning"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@android:drawable/ic_dialog_alert"
        app:tint="#FFFFFFFF" />

<TextView
android:id="@+id/tvAlertMessage"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/ivWarning"
android:layout_marginTop="32dp"
android:gravity="center"
android:text="¡BLACKOUT ALERT!"
android:textColor="#FFFFFFFF"
    android:textSize="28sp"
    android:textStyle="bold" />

    <!-- Mensaje secundario -->
<TextView
android:id="@+id/tvSubMessage"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/tvAlertMessage"
android:layout_marginTop="16dp"
android:gravity="center"
android:text="Emergency Protocol Mird2 enabled:"
android:textColor="#CCFFFFFF"
    android:textSize="18sp" />

    <!-- Botón de acción (opcional) -->

    <TextView
        android:id="@+id/tvSubMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAlertMessage"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="This protocol will help you in order to communicate with the people you travel with "
        android:textColor="#CCFFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAcknowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubMessage"
        android:layout_marginTop="75dp"
        android:backgroundTint="#FF333333"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_centerHorizontal="true"
        android:text="UNDERSTOOD"
        android:textColor="#FFFFFF" />

</RelativeLayout>